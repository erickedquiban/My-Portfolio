<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="200dp"
    android:background="#66000000"
    android:padding="5dp"
    android:layout_gravity="center">


    <TextView
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="#ff3300"
        android:gravity="center"
        android:text="Close"
        android:textColor="#ffebe6"
        android:textStyle="bold"
        tools:text="X" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Sample Project "
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#ffffff"/>

        //Location

        <LinearLayout
            android:layout_marginTop="50dp"
            android:id="@+id/locationlayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnmother"
                    android:layout_width="30dp"

                    android:layout_marginRight="2dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mobileapps"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-1dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mother Words"
                    android:onClick="MotherWords"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>

        //Phone Number



        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/phonelayout"
            android:layout_below="@id/locationlayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"

                android:orientation="horizontal">

                <Button

                    android:layout_width="30dp"

                    android:layout_marginRight="2dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mobileapps"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-1dp"/>

                <TextView
                    android:id="@+id/btnalpha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="Alphabet"
                    android:textSize="20dp"
                    android:text="Alphabet Apps for Kids"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>





    </RelativeLayout>
</LinearLayout>